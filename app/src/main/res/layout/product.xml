<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <ImageView
        android:id="@+id/p1"
        android:layout_width="240dp"
        android:layout_height="290dp"
        android:layout_gravity="center"
        android:src="@drawable/pizza"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"


        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="pizza One"
        android:layout_gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/p1"
         app:layout_constraintStart_toStartOf="@id/p1"
        app:layout_constraintEnd_toEndOf="@id/p1"
        android:textSize="30dp"/>

    <RatingBar

        android:id="@+id/et"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:numStars="5"
        android:progressTint="@color/yellow"
        android:rating="4.5"
        android:layout_gravity="center"
        android:secondaryProgressTint="@color/yellow"
        tools:layout_editor_absoluteX="85dp"
        tools:layout_editor_absoluteY="519dp" />


    <ImageView
        android:id="@+id/p2"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:src="@drawable/visa"
        app:layout_constraintEnd_toEndOf="@+id/et"
        app:layout_constraintStart_toStartOf="@+id/et"
        app:layout_constraintTop_toBottomOf="@+id/et" />
    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:id="@+id/tel"
        android:layout_height="150dp"
        app:lottie_autoPlay="true"
        app:lottie_url="https://assets3.lottiefiles.com/packages/lf20_jjokptgh.json"
        app:lottie_loop="true"/>
</LinearLayout>